<odoo>
    <record id="view_product_template_form_custom" model="ir.ui.view">
        <field name="name">product.template.form.custom</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='general_information']" position="inside">
                <group string="Additional Information">
                    <field name="bahan" />
                    <field name="warna" />
                    <field name="ukuran" />
                    <field name="ketersediaan" />
                    <field name="kadaluwarsa" />
                    <field name="lokasi_penyimpanan" />
                    <field name="intruksi_perawatan" />
                    <field name="kondisi_produk" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
